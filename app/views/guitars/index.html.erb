<p id="notice"><%= notice %></p>

<h1>Guitars</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Preferences</th>
      <th>Type</th>
      <th>Strings</th>
      <th>Brand</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guitars.each do |guitar| %>
      <tr>
        <td><%= guitar.name %></td>
        <td><%= guitar.preferences %></td>
        <td><%= guitar.type %></td>
        <td><%= guitar.strings %></td>
        <td><%= guitar.brand %></td>
        <td><%= guitar.description %></td>
        <td><%= guitar.price %></td>
        <td><%= link_to 'Show', guitar %></td>
        <td><%= link_to 'Edit', edit_guitar_path(guitar) %></td>
        <td><%= link_to 'Destroy', guitar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

