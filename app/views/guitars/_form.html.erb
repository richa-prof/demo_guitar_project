<%= form_for(guitar) do |f| %>
  <% if guitar.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(guitar.errors.count, "error") %> prohibited this guitar from being saved:</h2>
      <ul>
        <% guitar.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <%= f.fields_for :preferences do |ff| %>
    <div class="field">
      <%= ff.label :series %>
      <%= ff.text_field :series, value: f.object.check_value_exist("series") %>
    </div>
    <div class="field">
      <%= ff.label :shape %>
      <%= ff.text_field :shape, value: f.object.check_value_exist("shape") %>
    </div>
    <div class="field">
      <%= ff.label :tuner %>
      <%= ff.text_field :tuner, value: f.object.check_value_exist("tuner") %>
    </div>
    <div class="field">
      <%= ff.label :binding %>
      <%= ff.text_field :binding, value: f.object.check_value_exist("binding") %>
    </div>
    <div class="field">
      <%= ff.label :neck %>
      <%= ff.text_field :neck, value: f.object.check_value_exist("neck") %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :type %>
    <%= f.text_field :type %>
  </div>

  <div class="field">
    <%= f.label :strings %>
    <%= f.text_field :strings %>
  </div>

  <div class="field">
    <%= f.label :brand %>
    <%= f.text_field :brand %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
