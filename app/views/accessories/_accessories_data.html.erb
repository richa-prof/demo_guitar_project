<div class="row">
  <% accessories.each do |a| %>
    <div class="col-sm-4 col-lg-4 col-md-4">
      <div class="thumbnail">
        <%= image_tag(a.image_file, style: 'height:15vw;width:50vw;margin-bottom:20px;') %>
        <div class="caption">
          <!-- <h5 class="pull-right">Price: <%#= g.price_money %></h5> -->
          <h5>
            <%= link_to "#{a.name}", accessory_path(a.id) %>
          </h5>
          <p>
            <%= a.details %>
          </p>
        </div>
        <%= form_tag add_to_cart_path, remote: true do |f| %>
          <h4 class="text-right">Price: <span style="color: green"><%= a.price_money %></span></h4>
          <div class="input-group">
            <div class="input-group-btn">
              <%= hidden_field_tag :product_id, '', value: a.product.id %>
              <%= submit_tag "Add to Cart", class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
        <div class="ratings">
          <p class="pull-right">15 reviews</p>
          <p>
            <span class="glyphicon glyphicon-star"></span>
            <span class="glyphicon glyphicon-star"></span>
            <span class="glyphicon glyphicon-star"></span>
            <span class="glyphicon glyphicon-star"></span>
            <span class="glyphicon glyphicon-star"></span>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
